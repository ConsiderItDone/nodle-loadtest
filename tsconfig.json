{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017",
      "ESNext"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noImplicitAny": true,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "removeComments": true,
    "baseUrl": ".",
    "outDir": "dist",
    "types": [
      "node"
    ],
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}